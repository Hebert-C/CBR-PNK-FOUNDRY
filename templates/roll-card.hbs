<div class="runner {{class}}">
    <img src="{{img}}" title="{{name}}" data-edit="img"/>
    <div class="text">
        <h1>{{name}} {{#if title}}- {{title}}{{/if}}</h1>
        <div class="result">
            {{#if action}}<h3>{{action}}</h3>{{/if}}
            <div class="dice">
                {{{dices}}}
            </div>
        </div>
        <div class="desc">
            {{{desc}}}
        </div>
    </div>
    <div class="situation">
        {{#if efect}}<p>{{localize 'ROLL.Effect'}}: {{efect}}</p>{{/if}}
        <p>{{approach}}</p>
        {{#if threat}}<p>{{localize 'ROLL.Threat'}}: {{threat}}</p>{{/if}}
    </div>
</div>